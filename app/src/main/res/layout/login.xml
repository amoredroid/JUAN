<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgView_happy_kids"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/happy_kids" />

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tV_juan"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="160dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="JUAN"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="65sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tV_ation"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="10dp"
                    android:text="ation"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTertiary"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tV_juan"
                    tools:layout_editor_absoluteY="161dp"
                    tools:ignore="MissingConstraints" />

            </android.support.constraint.ConstraintLayout>



            <RelativeLayout
                android:id="@+id/relativeLayout_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/imgView_userIcon1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/user_icon_1"
                    android:tint="@color/colorSecondary" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imgView_userIcon1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imgView_userIcon1"
                    android:hint="Username"
                    android:fontFamily="@font/montserrat_alternates"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout_username"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/imgView_passwordIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/psw_icon"
                    android:tint="@color/colorSecondary" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imgView_passwordIcon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imgView_passwordIcon"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:fontFamily="@font/montserrat_alternates"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />


            </RelativeLayout>

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout_password"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/montserrat_alternates"
                android:text="SIGN IN"
                android:textColor="@color/colorTertiary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tV_forgot_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_sign_in"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_alternates"
                android:text="Forgot password?"
                android:textAlignment="center"
                android:textColor="@color/colorTertiaryInverse"
                android:textSize="16sp" />


            <RelativeLayout
                android:id="@+id/relativeLayout_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tV_forgot_psw"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/imgView_tV_new_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorTertiary"
                    android:padding="10dp"
                    android:text="New here?"
                    android:fontFamily="@font/montserrat_alternates"
                    android:paddingBottom="1dp"
                    android:textAlignment="textEnd"
                    android:tint="@color/colorSecondary" />

                <TextView
                    android:id="@+id/tV_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imgView_tV_new_here"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imgView_tV_new_here"
                    android:background="@color/colorTertiary"
                    android:fontFamily="@font/montserrat_alternates"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:text="Sign up!"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_below="@id/relativeLayout_sign_up"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="-12dp"
                android:src="@drawable/security_icon" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>